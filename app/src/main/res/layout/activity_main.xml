                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile15"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/info_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:layout_margin="8sp"
        android:layout_marginBottom="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>