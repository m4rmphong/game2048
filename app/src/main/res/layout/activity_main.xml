<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMain">

    <FrameLayout
        android:id="@+id/title_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:layout_margin="8sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/score_panel_height"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="@dimen/tile_margin"
            android:layout_marginTop="@dimen/tile_margin"
            android:layout_marginEnd="@dimen/tile_margin"
            android:layout_marginBottom="@dimen/tile_margin"
            android:background="@drawable/grid_bg_round_corner"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/info_title_width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tile_margin"
                    android:layout_marginRight="@dimen/tile_margin"
                    android:gravity="center"
                    android:text="@string/score_title"
                    android:textSize="@dimen/info_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/tile_margin"
                    android:layout_marginRight="@dimen/tile_margin"
                    android:layout_marginBottom="@dimen/tile_margin"
                    android:background="@drawable/tile_bg_round_corner"
                    android:gravity="center"
                    android:textSize="@dimen/info_textSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/info_title_width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/record_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tile_margin"
                    android:layout_marginRight="@dimen/tile_margin"
                    android:gravity="center"
                    android:text="@string/record_title"
                    android:textSize="@dimen/info_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/tile_margin"
                    android:layout_marginRight="@dimen/tile_margin"
                    android:layout_marginBottom="@dimen/tile_margin"
                    android:background="@drawable/tile_bg_round_corner"
                    android:gravity="center"
                    android:textSize="@dimen/info_textSize"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="16sp"
                android:layout_marginTop="0sp"
                android:layout_marginEnd="16sp"
                android:layout_marginBottom="0sp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/title"
                android:textAlignment="center"
                android:textSize="@dimen/title_textSize" />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:text="@string/reset" />
        </RelativeLayout>

    </FrameLayout>

    <TableLayout
        android:id="@+id/grid"
        android:layout_width="@dimen/grid_size"
        android:layout_height="@dimen/grid_size"
        android:background="@drawable/grid_bg_round_corner"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tile0"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile1"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile2"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile3"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tile4"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile5"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile6"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile7"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tile8"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile9"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile10"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile11"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tile12"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile13"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile14"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />

            <TextView
                android:id="@+id/tile15"
                android:layout_width="@dimen/tile_size"
                android:layout_height="@dimen/tile_size"
                android:layout_margin="@dimen/tile_margin"
                android:background="@drawable/tile_bg_round_corner"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>